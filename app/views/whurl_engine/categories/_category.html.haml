%table{:id => "category_#{category.id}"}
  %caption
    %strong= category.name
    = link_to('Add Resource', new_resource_path(:category_id => category.id), :remote => true, :class => 'popup button')
    = link_to('', edit_category_path(category), :remote => true, :class => 'edit button')
    = link_to( '', category, :confirm => 'Are you sure?', :method => :delete, :remote => true, :class => 'destroy button')
    %p=category.description
  %thead
    %tr
      %th Resource
      %th Description
  %tbody.resources
    - category.resources.each do |resource|
      = render(resource)